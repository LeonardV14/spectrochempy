# TT example modified from SIMPSON article (JMR 2000) example 1

spinsys {
    channels 13C
    nuclei 13C 13C
    shift 1 0 6000 1 0 0 0
    shift 2 0 6000 0 0 0 0
    dipole 1 2 -1500 0 0 0
}

par {
    method gcompute
    spin_rate 2000
    gamma_angles 20
    sw spin_rate*gamma_angles
    np 4096
    crystal_file rep320
    start_operator Inx
    detect_operator Inp
}

proc pulseq {} {
    maxdt 5.0
    delay 1e6
}
proc main {} {
    global par

    set iso 0
    set f [fsimpson [list [list shift_2_iso $iso]]]
    fsave $f 1d_text.fid
    fsave $f 1d_ftext.fid -xreim
    fsave $f 1d_bin.fid -binary
    fsave $f 1d_rawbin.fid -raw_bin
    faddlb $f 50 0
    fft $f
    fsave $f 1d_text.spe
    fsave $f 1d_ftext.spe -xreim
    fsave $f 1d_bin.spe -binary
    fsave $f 1d_rawbin.spe -raw_bin
    funload $f
    
}

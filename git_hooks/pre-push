#!/bin/bash

# to make it work with SourceTree (assuming anaconda is used)
# probably need to change this to account for windows developper..
# TODO: activate in windows?

source ~/.bash_profile

# to make it work with matplotlib/latex
export PATH=$PATH:/Library/TeX/texbin/

# make docs and do not push if doc fails to build

git add -A
git commit --no-verify --amend

python docs/builddocs.py clean
python docs/builddocs.py html || exit 1
python docs/builddocs.py pdf || exit 1
python docs/builddocs.py release || exit 1





